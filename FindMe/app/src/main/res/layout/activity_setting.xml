<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:id="@+id/nameSetting">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="30sp"
        android:layout_below="@+id/nameSetting"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/emailSetting">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:textSize="30sp"
        android:layout_below="@+id/emailSetting"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/phoneSetting">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Code"
        android:textSize="30sp"
        android:layout_below="@+id/phoneSetting"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/codeSetting">

    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codeSetting"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:text="Sign out"
        android:id="@+id/signoutSettings">

    </Button>

</RelativeLayout>